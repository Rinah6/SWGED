<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>SoftGED</title>

        <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />

        <link rel="stylesheet" href="~/admlte/plugins/fontawesome-free/css/all.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/jqvmap/jqvmap.min.css" />
        <link rel="stylesheet" href="~/admlte/dist/css/adminlte.css" />
        <link rel="stylesheet" href="~/admlte/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/daterangepicker/daterangepicker.css" />
        <link rel="stylesheet" href="~/lib/summernote/summernote.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" />
        <link rel="stylesheet" href="~/lib/select2/select2.min.css" />
        <link rel="stylesheet" href="~/admlte/plugins/sweetalert2/sweetalert2.min.css" />

        <link rel="stylesheet" href="~/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/style.css" />
        <link rel="stylesheet" href="~/css/loader.css" />

        <script src="~/lib/bootstrap.bundle.min.js"></script>
        <script src="~/lib/pdfjs/pdf.worker.min.js"></script>
        <script src="~/lib/pdfjs/pdf.min.js"></script>
        <script src="~/admlte/plugins/jquery/jquery.min.js"></script>
        <script src="~/admlte/plugins/sweetalert2/sweetalert2.all.min.js"></script>
        <script src="~/lib/summernote/summernote.min.js"></script>
        <script src="~/lib/emails-input/utils.js"></script>
        <script src="~/lib/emails-input/emails-input.js"></script>
        <script src="~/lib/axios.min.js"></script>
        <script src="~/lib/clipboard.min.js"></script>
        <script src="~/lib/dayjs.min.js"></script>
        <script src="~/lib/select2/select2.min.js"></script>

        <script src="~/admlte/plugins/jquery-ui/jquery-ui.min.js"></script>
        <script src="~/admlte/plugins/chart.js/Chart.min.js"></script>
        <script src="~/admlte/plugins/sparklines/sparkline.js"></script>
        <script src="~/admlte/plugins/jqvmap/jquery.vmap.min.js"></script>
        <script src="~/admlte/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
        <script src="~/admlte/plugins/jquery-knob/jquery.knob.min.js"></script>
        <script src="~/admlte/plugins/moment/moment.min.js"></script>
        <script src="~/admlte/plugins/daterangepicker/daterangepicker.js"></script>
        <script src="~/admlte/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
        <script src="~/admlte/plugins/summernote/summernote-bs4.min.js"></script>
        <script src="~/admlte/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <script src="~/admlte/dist/js/adminlte.js"></script>
        <script src="~/admlte/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    </head>

    <body class="hold-transition sidebar-mini wrapper" style="user-select:none;">
        <div id="loader" class="lds-dual-ring display-none overlay"></div>

        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/logo-soft.png" alt="Softwell" />
        </div>

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto dropdown">
                <li class="nav-item">
                    <a class="nav-link d-flex" style="align-items: center;" data-bs-toggle="dropdown" href="#">
                        <i class="far fa-user-circle"></i>
                        <div data-id="user" style="padding-left:5px;"></div>
                    </a>

                    <div class="dropdown-menu" style="left: -550%; ">
                        @* <div class="dropdown-divider"></div> *@
                        @* <a href="../User/Param" class="dropdown-item"> *@
                        <a href="#" class="dropdown-item">
                            <div id="user"></div>
                        </a>

                        <div class="dropdown-divider"></div>

                        <div class="dropdown-item" data-id="disconnect">
                            <i class="fa fa-power-off mr-2"></i> Déconnexion
                        </div>
                    </div>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-light-primary elevation-4 imageHover">
            <a class="brand-link">
                <img src="~/img/logo-soft.png" alt="AdminLTE Logo" class="brand-image" style="opacity: .8">
                <span class="brand-text font-weight-bolder">SoftGED</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false" style="display:block">
                        <li class="nav-flat">
                            <hr />
                        </li>

                        <li class="nav-item menu-open">
                            <a asp-action="Index" asp-controller="Document" class="nav-link active">
                                <i class="nav-icon fa fa-home"></i>
                                <p>
                                    Accueil
                                </p>
                            </a>
                        </li>
                        <li class="nav-flat" id="new-document-li-up-nav">
                            <hr />
                        </li>
                        <li class="nav-header" data-id="w-menu">
                            Gestion de documents
                        </li>
                        <li class="nav-item" id="new-document-li">
                            <a asp-action="NewDocument" asp-controller="Document" class="nav-link">
                                <i class="nav-icon fas fa-file"></i>
                                <p>
                                    Création de documents
                                </p>
                            </a>
                        </li>
                        <li class="nav-flat" id="new-document-li-down-nav">
                            <hr />
                        </li>
                        <li id="espace_client"></li>
                    </ul>

                    <img src="~/img/logo-soft.png" alt="AdminLTE Logo" class="brand-image elevation-0 imageHoverLogo"
                        style="opacity: .7; bottom: 0; position: absolute; width: 60%;" />
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; <span id="current-year"></span> <a
                    href="https://www.softwell.mg">Softwell</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> beta
            </div>
        </footer>
        
        <script type="module" src="~/js/roles.js" asp-append-version="true" defer></script>

        <script defer>
            $.widget.bridge('uibutton', $.ui.button);

            $('#current-year').text(new Date().getFullYear());
        </script>
    </body>
</html>
