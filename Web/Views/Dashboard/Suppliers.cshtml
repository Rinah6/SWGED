@{
    ViewData["Controller"] = "Paramétrage des fournisseurs";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .select2-container .select2-selection--single {
        height: 40px;
    }
</style>

<script src="~/lib/clipboard.min.js"></script>

<div class="card">
    <div class="card-header"><br />
        <div class="row">
            <div class="col-lg-4 col-6" style="cursor: pointer; ">
                <div class="small-box bg-gradient-primary">
                    <div class="inner">
                        <h3 id="curr_user"></h3>
                        <p>Nombre de fournisseurs total</p>
                    </div>
                    
                    <div class="icon">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-6">
                <button id="copy-suppliers-link" class="btn btn-info bg-gradient mb-3 col-6">
                    <i class="fa fa-link p-2"></i>Obtenir le lien d'accès des fournisseurs
                </button>
            </div>
        </div>

        <br /><br />

        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" id="wsearch" class="form-control float-right" placeholder="Search">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>NIF</th>
                    <th>STAT</th>
                    <th>N° CIN</th>
                    <th>MAIL</th>
                    <th>CONTACT</th>
                    <th>Date de création</th>
                    <th></th>
                </tr>
            </thead>

            <tbody id="suppliers"></tbody>
        </table>
    </div>
</div>

<script src="~/js/widgets.js" asp-append-version="true"></script>
<script type="module" src="~/js/dashboard/settings/suppliers.js" asp-append-version="true"></script>
