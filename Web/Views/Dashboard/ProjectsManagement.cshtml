@{
    ViewData["Controller"] = "Gestion des projets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/admlte/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

<script src="~/admlte/plugins/sweetalert2/sweetalert2.all.min.js"></script>


<div class="card">
    <div class="card-header"><br />
        <div class="col-lg-4 col-6" style="cursor: pointer; " user-modal>
            <div class="small-box bg-gradient-success">
                <div class="inner">
                    <h3 id="societe_nombre"></h3>
                    <p>Nombre de Projets total</p>
                </div>
                <div class="icon">
                    <i class="fas fa-plus"></i>
                </div>
            </div>
        </div>
        <br /><br />
        <h3 class="card-title">Liste des Projets</h3>
        <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" id="wsearch" class="form-control float-right" placeholder="Search">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>SOA</th>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Disk location</th>
                    <th>Serveur</th>
                    <th>Base de données</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="liste_user">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="create-project-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card-primary">
                <div class="card-header">
                    <h3 class="card-title" id="modal-title">Insertion d'un nouveau projet</h3>

                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card-body">
                    <div class="form-group" id="soa-container">
                        <label for="soas">SOA: </label>
                        <select id="soas" name="soas" class="form-control" style="width: 300px;"></select>
                    </div>
                    <div class="form-group">
                        <label for="name">Nom: </label>
                        <input type="text" class="form-control" id="name" placeholder="Nom">
                        <input type="hidden" id="id" value="">
                    </div>
                    <div class="form-group">
                        <label for="new-current-sites">Sites autorisés: </label>
                        <div id="new-current-sites"></div>
                    </div>
                    <div class="form-group">
                        <label for="storage">Stockage des documents: </label>
                        <input type="text" class="form-control" id="storage" placeholder="Disk location">
                    </div>
                    <div class="form-group">
                        <label for="serveur">Instance: </label>
                        <input type="text" class="form-control" id="serveur" placeholder="Serveur">
                    </div>
                    <div class="form-group">
                        <label for="authentication-modes">Mode d'authentification: </label>
                        <select id="authentication-modes" style="width: 250px; ">
                            <option value="0" selected>Authentification Windows</option>
                            <option value="1">Authentification SQL Server</option>
                        </select>
                    </div>

                    <div id="sa-password"></div>

                    <div class="card-footer">
                        <button class=" btn btn-primary" id="connection-btn">Connexion</button>
                    </div>

                    <div class="form-row" id="databases-container"></div>

                    @* <div id="save-db-connection-container"></div> *@

                    @* <div class="form-group">
                        <label for="login">Login (sa): </label>
                        <input type="text" class="form-control" id="login" placeholder="Login (sa)">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe (sa): </label>
                        <input type="text" class="form-control" id="password" placeholder="Mot de passe (sa)">
                    </div> *@
                </div>
                
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" create-project>Envoyer</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="update-project-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card-primary">
                <div class="card-header">
                    <h3 class="card-title" id="modal-title">Modification du projet</h3>
                    
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="card-body">
                    <div class="form-group" id="soa-container">
                        <label for="soas">SOA: </label>
                        <select id="soas" name="soas" class="form-control" style="width: 300px;"></select>
                    </div>
                    <div class="form-group">
                        <label for="current-name">Nom: </label>
                        <input type="text" class="form-control" id="current-name" placeholder="Nom" />
                    </div>
                    <div class="form-group">
                        <label for="current-sites">Sites autorisés: </label>
                        <div id="current-sites"></div>
                    </div>
                    <div class="form-group">
                        <label for="serveur">Instance: </label>
                        <input type="text" class="form-control" id="serveur" placeholder="Serveur">
                    </div>
                    <div class="form-group">
                        <label for="authentication-modes">Mode d'authentification: </label>

                        <select id="authentication-modes" style="width: 250px; ">
                            <option value="0" selected>Authentification Windows</option>
                            <option value="1">Authentification SQL Server</option>
                        </select>
                    </div>

                    <div id="sa-password"></div>

                    <div class="card-footer">
                        <button class=" btn btn-primary" id="connection-btn">Connexion</button>
                    </div>

                    <div class="form-row" id="databases-container"></div>

                    <hr class="form-group" />

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-internal-users-handling" />
                        <label for="has-access-to-internal-users-handling">Gestion d'utilisateurs internes</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-suppliers-handling" />
                        <label for="has-access-to-suppliers-handling">Gestion des fournisseurs</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-processing-circuits-handling" />
                        <label for="has-access-to-processing-circuits-handling">Circuits de traitement de documents</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-sign-myself-feature" />
                        <label for="has-access-to-sign-myself-feature">Signer moi-même</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-archive-immediately-feature" />
                        <label for="has-access-to-archive-immediately-feature">Archiver immédiatement</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-global-dynamic-fields-handling" />
                        <label for="has-access-to-global-dynamic-fields-handling">Champs dynamiques globaux</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-tomate-db-connection" />
                        <label for="has-access-to-tomate-db-connection">Transfert liens vers Tom Pro</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-users-connections-information" />
                        <label for="has-access-to-users-connections-information">Historique des connexions des utilisateurs</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-document-types-handling" />
                        <label for="has-access-to-document-types-handling">Accès à la dynamisation de types de documents</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-physical-location-handling" />
                        <label for="has-access-to-physical-location-handling">Emplacement physique de documents</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-numeric-library" />
                        <label for="has-access-to-numeric-library">Bibliothèque numérique</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-documents-accesses-handling" />
                        <label for="has-access-to-documents-accesses-handling">Paramétrage des accès aux documents</label>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="has-access-to-rsf" />
                        <label for="has-access-to-rsf">Accès à RSF Tracker</label>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" update-project>Envoyer</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/widgets.js" asp-append-version="true"></script>
<script type="module" src="~/js/dashboard/settings/projects.js" asp-append-version="true"></script>
